{
  "distributedLogging": {
    "name": "NovaShield Distributed Logging & Monitoring System",
    "version": "1.0.0",
    "description": "Enterprise-grade distributed logging with real-time monitoring, alerting, and observability",
    "features": {
      "structuredLogging": true,
      "realTimeStreaming": true,
      "distributedTracing": true,
      "performanceMonitoring": true,
      "alerting": true,
      "logAggregation": true,
      "metricsCollection": true,
      "securityEventCorrelation": true,
      "exportCapabilities": true,
      "retentionPolicies": true
    },
    "configuration": {
      "maxLogEntries": 100000,
      "retentionPeriod": 604800000,
      "batchSize": 100,
      "flushInterval": 5000,
      "compressionEnabled": true,
      "encryptionEnabled": true,
      "replicationEnabled": true,
      "alertCooldown": 300000,
      "metricsInterval": 60000
    },
    "logLevels": {
      "trace": {
        "priority": 0,
        "description": "Very detailed debugging information"
      },
      "debug": {
        "priority": 1,
        "description": "Debugging information"
      },
      "info": {
        "priority": 2,
        "description": "General informational messages"
      },
      "warn": {
        "priority": 3,
        "description": "Warning messages"
      },
      "error": {
        "priority": 4,
        "description": "Error messages"
      },
      "fatal": {
        "priority": 5,
        "description": "Fatal error messages"
      }
    },
    "logCategories": {
      "application": {
        "description": "Application-specific logs",
        "retention": "7d",
        "alerting": false
      },
      "security": {
        "description": "Security-related events",
        "retention": "30d",
        "alerting": true
      },
      "performance": {
        "description": "Performance monitoring logs",
        "retention": "7d",
        "alerting": true
      },
      "audit": {
        "description": "Audit trail logs",
        "retention": "90d",
        "alerting": false
      },
      "system": {
        "description": "System-level logs",
        "retention": "14d",
        "alerting": true
      },
      "user": {
        "description": "User activity logs",
        "retention": "30d",
        "alerting": false
      }
    },
    "services": {
      "backend": {
        "description": "Main backend API service",
        "logLevel": "info",
        "metricsEnabled": true,
        "tracingEnabled": true
      },
      "security-engine": {
        "description": "Security analysis microservice",
        "logLevel": "debug",
        "metricsEnabled": true,
        "tracingEnabled": true
      },
      "terminal-service": {
        "description": "Terminal emulation service",
        "logLevel": "info",
        "metricsEnabled": true,
        "tracingEnabled": true
      },
      "monitoring-service": {
        "description": "System monitoring service",
        "logLevel": "info",
        "metricsEnabled": true,
        "tracingEnabled": true
      },
      "frontend": {
        "description": "Frontend application",
        "logLevel": "warn",
        "metricsEnabled": false,
        "tracingEnabled": true
      }
    },
    "alertRules": {
      "highErrorRate": {
        "enabled": true,
        "condition": "error_rate > 0.05",
        "timeWindow": 300000,
        "severity": "high",
        "cooldown": 600000,
        "description": "Alert when error rate exceeds 5% in 5 minutes"
      },
      "serviceUnavailable": {
        "enabled": true,
        "condition": "service_status = 'unhealthy'",
        "timeWindow": 60000,
        "severity": "critical",
        "cooldown": 300000,
        "description": "Alert when service becomes unavailable"
      },
      "highResponseTime": {
        "enabled": true,
        "condition": "avg_response_time > 2000",
        "timeWindow": 600000,
        "severity": "medium",
        "cooldown": 900000,
        "description": "Alert when average response time exceeds 2 seconds"
      },
      "securityIncident": {
        "enabled": true,
        "condition": "category = 'security' AND level IN ('error', 'fatal')",
        "timeWindow": 60000,
        "severity": "critical",
        "cooldown": 0,
        "description": "Alert on security-related errors or fatal events"
      },
      "resourceExhaustion": {
        "enabled": true,
        "condition": "memory_usage > 0.9 OR cpu_usage > 0.8",
        "timeWindow": 180000,
        "severity": "high",
        "cooldown": 1800000,
        "description": "Alert when system resources are running low"
      }
    },
    "metricTypes": {
      "counter": {
        "description": "Monotonically increasing values",
        "aggregation": "sum"
      },
      "gauge": {
        "description": "Point-in-time values that can increase or decrease",
        "aggregation": "last"
      },
      "histogram": {
        "description": "Distribution of values over time",
        "aggregation": "percentiles"
      },
      "timer": {
        "description": "Time-based measurements",
        "aggregation": "percentiles"
      }
    },
    "endpoints": {
      "logsQuery": "/api/logging/logs",
      "metricsQuery": "/api/logging/metrics",
      "correlatedLogs": "/api/logging/logs/trace/:correlationId",
      "logSubmission": "/api/logging/logs",
      "metricSubmission": "/api/logging/metrics",
      "systemStats": "/api/logging/stats",
      "realTimeStream": "/api/logging/stream",
      "exportLogs": "/api/logging/export"
    },
    "exportFormats": {
      "json": {
        "mimeType": "application/json",
        "extension": "json",
        "structured": true
      },
      "csv": {
        "mimeType": "text/csv",
        "extension": "csv",
        "structured": false
      }
    },
    "streaming": {
      "serverSentEvents": {
        "enabled": true,
        "heartbeatInterval": 30000,
        "maxConnections": 100
      },
      "websockets": {
        "enabled": false,
        "port": 8081
      }
    },
    "security": {
      "auditAllAccess": true,
      "encryptSensitiveData": true,
      "maskPiiInLogs": true,
      "requireAuthentication": true,
      "rateLimiting": {
        "enabled": true,
        "windowMs": 900000,
        "maxRequests": 1000
      }
    },
    "performance": {
      "indexing": true,
      "compression": true,
      "caching": true,
      "batchProcessing": true,
      "asyncOperations": true
    }
  }
}
